<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" type="BorderPane"
         xmlns="http://javafx.com/javafx/8.0.111">
    <left>
        <Button fx:id="previousPage" mnemonicParsing="false" text="left" BorderPane.alignment="CENTER"/>
    </left>
    <right>
        <Button fx:id="nextPage" defaultButton="true" mnemonicParsing="false" text="right" textAlignment="CENTER"
                BorderPane.alignment="CENTER"/>
    </right>
    <bottom>
        <Text fx:id="pageCounter" strokeType="OUTSIDE" strokeWidth="0.0" text="1/X" BorderPane.alignment="CENTER"/>
    </bottom>
    <center>
        <ImageView fx:id="imageView" cache="true" cacheHint="SPEED" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <cursor>
                <Cursor fx:constant="DISAPPEAR"/>
            </cursor>
        </ImageView>
    </center>
</fx:root>
