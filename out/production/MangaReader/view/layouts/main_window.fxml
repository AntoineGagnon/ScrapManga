<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="view.TabController"
         maxHeight="-Infinity" maxWidth="-Infinity"
         minHeight="-Infinity" minWidth="-Infinity"
         prefHeight="400.0" prefWidth="600.0"
         tabClosingPolicy="ALL_TABS" fx:id="mainTabPane">
    <Tab text="All" closable="false">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
                <HBox alignment="CENTER" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <TextField fx:id="searchTextField" promptText="Enter elements name"
                               HBox.hgrow="ALWAYS"/>
                    <Button mnemonicParsing="false" text="Search">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
                <ListView fx:id="mangaListView" VBox.vgrow="ALWAYS"/>
            </VBox>
        </AnchorPane>
    </Tab>
    <Tab text="Favorites" closable="false">
        <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <children>
                    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="0.0">
                        <children>
                            <ListView fx:id="favoritesListView" VBox.vgrow="ALWAYS"/>
                        </children>
                    </VBox>
                </children>
            </AnchorPane>
        </content>
    </Tab>

</TabPane>
